@model IEnumerable<Bugtracker.Models.Projects>

@{
    ViewBag.Title = "View Archived Projects";
}
<style>
    .space {
        margin-left: 5px;
    }
</style>

<div class="col-md-6 subnav">
    <h1>Archived Projects</h1>
</div>
<div class="col-md-6 subnav">
    <div class="admin-btns">
        @Html.ActionLink("Your Projects", "Index", new { controller = "Projects", action = "Index" }, new { @class = "btn btn-primary" })
        @Html.ActionLink("All Projects", "ViewAll", new { controller = "Projects", action = "ViewAll" }, new { @class = "btn btn-warning space" })
    </div>
</div>

<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-12 content">
                <div class="col-md-offset-1 col-md-4">
                    <h3>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</h3>
                    <p>Deadline: @item.Deadline.ToString("MMMM dd, yyyy h:mm t")M</p>
                </div>
            </div>
        }


    </div>
</div>